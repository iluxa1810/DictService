        void CreateDictNode()
        {
            Ext.Extension = new XElement("Ext");
            Ext.Extension.Add(new XAttribute("ShowDictShortcut", ""));
            Ext.Extension.Add(new XAttribute("ClearValuesShortcut", ""));
            Ext.Extension.Add(new XAttribute("InsertDictValuesShortcut", ""));
